<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
</head>
<body>
    <section class="movie-list">
        <h2>Bulls Movie Recommendations</h2>
        <table id="movieTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Rating</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <button onclick="addMovie()">Add Movie</button>
    </section>

    <section class="movie-list">
        <h2>Bulls Movies by Genre</h2>
        <canvas id="genreChart" width="400" height="200"></canvas>
        <!-- Genre chart will be displayed here -->
    </section>

    <script>
        // Sample initial movie data
        let movies = [
            {
                id: 1,
                title: "Bull of Thrones",
                genre: "Fantasy",
                rating: "8/10",
                description: "A bull's epic journey to claim the throne."
            },
            {
                id: 2,
                title: "The Bull Bang Theory",
                genre: "Comedy",
                rating: "10/10",
                description: "A group of brilliant bulls navigating the complexities of modern ranch life."
            },
            {
                id: 3,
                title: "Bull Call Saul",
                genre: "Crime",
                rating: "7/10",
                description: "A bull lawyer's journey into the criminal underworld."
            },
            {
                id: 4,
                title: "Bulls Anatomy",
                genre: "Drama",
                rating: "7/10",
                description: "Life, love, and drama in a bustling cattle ranch hospital."
            },
            {
                id: 5,
                title: "The Walking Bull",
                genre: "Horror",
                rating: "6/10",
                description: "Surviving the apocalypse as a herd of determined bulls."
            }
        ];

        // Function to render movies
        function renderMovies() {
            const tableBody = document.querySelector("#movieTable tbody");
            tableBody.innerHTML = "";
            movies.forEach((movie, index) => {
                const row = `
                                    <tr>
                                        <td>${index + 1}</td>
                                        <td>${movie.title}</td>
                                        <td>${movie.genre}</td>
                                        <td>${movie.rating}</td>
                                        <td>${movie.description}</td>
                                        <td>
                                            <button onclick="editMovie(${movie.id})">Edit</button>
                                            <button onclick="deleteMovie(${movie.id})">Delete</button>
                                        </td>
                                    </tr>
                                `;
                tableBody.innerHTML += row;
            });
        }

        // Function to add a new movie
        function addMovie() {
            const newMovie = {
                id: movies.length + 1,
                title: prompt("Enter movie title:"),
                genre: prompt("Enter movie genre:"),
                rating: prompt("Enter movie rating:"),
                description: prompt("Enter movie description:")
            };
            movies.push(newMovie);
            renderMovies();
        }

        // Function to edit a movie
        function editMovie(movieId) {
            const index = movies.findIndex(movie => movie.id === movieId);
            if (index !== -1) {
                const updatedMovie = {
                    id: movieId,
                    title: prompt("Enter new movie title:", movies[index].title),
                    genre: prompt("Enter new movie genre:", movies[index].genre),
                    rating: prompt("Enter new movie rating:", movies[index].rating),
                    description: prompt("Enter new movie description:", movies[index].description)
                };
                movies[index] = updatedMovie;
                renderMovies();
            } else {
                alert("Movie not found!");
            }
        }

        // Function to delete a movie
        function deleteMovie(movieId) {
            const index = movies.findIndex(movie => movie.id === movieId);
            if (index !== -1) {
                movies.splice(index, 1);
                renderMovies();
            } else {
                alert("Movie not found!");
            }
        }

        // Initial rendering of movies
        renderMovies();
    </script>
</body>
</html>
